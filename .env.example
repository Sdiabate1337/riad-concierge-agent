# Riad Concierge AI - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Configuration
APP_NAME=Riad Concierge AI
NODE_ENV=production
PORT=3000
HOST=localhost
TIMEZONE=Africa/Casablanca

# WhatsApp Business API Configuration
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token
WHATSAPP_APP_SECRET=your_app_secret
WHATSAPP_API_VERSION=v18.0
WHATSAPP_WEBHOOK_URL=https://your-domain.com/webhook/whatsapp

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key
PINECONE_ENVIRONMENT=your_pinecone_environment
PINECONE_INDEX_NAME=riad-concierge-knowledge

# Anthropic Claude (Backup AI)
ANTHROPIC_API_KEY=your_anthropic_api_key
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=riad_concierge
DB_USER=postgres
DB_PASSWORD=your_secure_db_password
DB_SSL=false
DB_POOL_SIZE=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DB=0
REDIS_TTL=3600

# PMS Integration (Octorate)
OCTORATE_API_KEY=your_octorate_api_key
OCTORATE_PROPERTY_ID=your_property_id
OCTORATE_API_URL=https://api.octorate.com/v1
PMS_SYNC_INTERVAL=300

# External APIs
OPENWEATHER_API_KEY=your_openweather_api_key
DEFAULT_CITY=Marrakech
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# N8N Workflow Automation
N8N_BASE_URL=http://localhost:5678
N8N_WEBHOOK_URL=http://localhost:5678/webhook
N8N_AUTH_TOKEN=your_n8n_auth_token
N8N_USER=admin
N8N_PASSWORD=your_n8n_password
N8N_HOST=localhost
N8N_DB_NAME=n8n

# Security Configuration
JWT_SECRET=your_very_long_jwt_secret_key_at_least_32_characters
ENCRYPTION_KEY=your_32_character_encryption_key_here
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_FILES=5
LOG_MAX_SIZE=20m

# Cultural Settings
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=ar,fr,en,es

# Revenue Optimization
UPSELLING_ENABLED=true
UPSELLING_SUCCESS_THRESHOLD=0.7
UPSELLING_TIMING_OPTIMIZATION=true
DIRECT_BOOKING_TRACKING=true
LOYALTY_PROGRAM_ENABLED=true
COMMISSION_SAVINGS_SHARE=0.3

# Monitoring Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1

# Performance Tuning
MAX_CONCURRENT_MESSAGES=50
MESSAGE_PROCESSING_TIMEOUT=30000
CACHE_TTL=3600
VECTOR_SEARCH_TIMEOUT=5000

# Development Settings (only for development environment)
DEBUG_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_API_LOGGING=true
